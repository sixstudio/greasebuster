<h1 class="marginB10 marginT10 f_left w100pr100">Slider Tab management</h1>

<div class="marginB10 f_left admin_link">
<%#= link_to 'New Homecol', new_admin_homecol_path %>
  <%= link_to 'Back to Greasebuster Tabs management', '../admin' %>
</div>

<% @i = 1 %>
<% @slides.each do |slide| %>
<div class="f_left " >

    <div class="f_left c_cf266689 bold marginB10">Slide_<%= @i %>&nbsp;:&nbsp</div>
    <div class="f_left width_auto w100pr100 img_slide_index">
    <%= image_tag slide.image.url(:medium) %>
    </div><div>

    </div>

    <div class="clr"></div>

    <div class="marginB5">
      <div class="f_left c_cf266689 bold">Target&nbsp;:&nbsp</div>
      <div class="f_left width_auto w100pr100">
        <%= slide.target %>
      </div>
    </div>
    
    <div class="clr"></div><%= link_to 'Edit', edit_admin_slide_path(slide) %>
    <%= link_to 'Destroy', [:admin, slide], confirm: 'Are you sure?', method: :delete %><br /><br />
</div>

<% @i = @i + 1 %>
<% end %>

<div class="clr"></div>
<div class="marginT10 marginB10 f_left width_auto admin_link">
      <%= link_to 'New Slide', new_admin_slide_path %>
</div>
<div class="clr"></div>